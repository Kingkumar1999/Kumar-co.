      P2 = enemy("Fire Elemental", 500, 4, 8)
      P2.add_move("Lavaflux")
      P2.add_move("Monolith Beam")
      P2.add_type("Fire")
      Menu.battle(P1, P2)
      time.sleep(3)
      print(" ")
